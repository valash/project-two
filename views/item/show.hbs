<div class="card">
  <div class="card-body">
    <h4 class="card-title" style="font-family:'abel';color:#8a8a8a;text-transform:uppercase;">{{item.name}}</h4>
    <p class="card-text" style="font-family:'Raleway';color:#666666;">{{item.description}}</p>
  </div>

  <div class="d-flex justify-content-center" style="font-family: 'Raleway', sans-serif; text-decoration: underline; color:#8a8a8a;">
<h2 style="font-weight:300;font-size:x-large;">New Comment</h2>
</div>
{{#each item.comments}}
<div class="card">
<p>{{body}}</p>
</div>
{{/each}}

<form action="/item/{{item._id}}/comment?_method=PUT" method="post">
  <p class="form-group w-75 p-3 mx-auto">
    <label for="comment" style="font-family:'Raleway';color:#8a8a8a;margin:10px;">Comment:</label>
    <textarea name="comment" id="comment" cols="30" rows="10" class="form-control"></textarea>
  </p>
  <p class="form-group w-75 p-3 mx-auto">
    <input type="submit" value="Save" class="btn btn-light">
  </p>
</form>

<div class="card-footer btn toolbar" role="toolbar" aria-label="Toolbar with button groups">

  <div class="btn-group" role="group" aria-label="First group">
    <button type="button" class="btn btn-light">
      <a href="/item/{{item.id}}/edit" style="color:grey;">Edit</a>
    </button>
    </div>



<div class="btn-group" role="group" aria-label="Second Group">
  <button type="button" class="btn btn-light">
    <a href="/item/{{item.id}}/edit" style="color:grey;">Add Comment</a>
    </button>
</div>

  <div class="btn-group" role="group" aria-label="Third group">
 <form action="/item/{{item.id}}?_method=DELETE" method="post" class="d-inline">
      <input type="submit" value="Delete" class="btn btn-light" style="color:grey;">
    </form>
</div>

  <div class="btn-group" role="group" aria-label="Fourth group">
    <button type="button" class="btn btn-light"><a href="/" role="button" style="color:grey;">Home</button>
  </div>
  </div>

  
