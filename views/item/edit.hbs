<form action="/item/{{item.id}}?_method=PUT" method="post">
  <p class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="{{item.name}}" class="form-control">
  </p>
  <p class="form-group">
    <label for="description">Description:</label>
    <textarea name="description" id="" cols="30" rows="10" class="form-control">{{item.description}}</textarea>
  </p>
  <p class="form-group">
    <input type="submit" value="Save" class="btn btn-primary">
  </p>
</form>

