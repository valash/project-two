<h2 class="mb-3" style="font-family: 'Comfortaa', sans-serif;text-transform: lowercase;">What's On Your Mind?</h2>


{{#if items}}
<div class="card-deck">
  {{#each items }}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">{{description}}</p>
    </div>
    <div class="card-footer">
      <a href="/item/{{id}}" class="card-link">View More</a>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<div class="card-deck mt-5">
  <div class="card shadow p-3 mb-5 bg-white rounded">
    <div class="card-body">
      <a href="/item/new" class="btn btn-success">Create New Entry</a>
    </div>
  </div>
</div>